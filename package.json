{
    "name": "medly-components",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "version": "1.0.0",
    "description": "ðŸš€ Simple themable component library using react, styled-components & typescript",
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-lerna-changelog"
        }
    },
    "husky": {
        "hooks": {
            "prepare-commit-msg": "[[ -n $HUSKY_BYPASS ]] || exec < /dev/tty && git cz --hook || true",
            "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "scripts": {
        "build:core": "lerna exec --scope @medly-components/core -- rollup -c=../../rollup.config.js",
        "build:layout": "lerna exec --scope @medly-components/layout -- rollup -c=../../rollup.config.js",
        "build:utils": "lerna exec --scope @medly-components/utils -- rollup -c=../../rollup.config.js",
        "build:loaders": "lerna exec --scope @medly-components/loaders -- rollup -c=../../rollup.config.js",
        "build:icons": "lerna exec --scope @medly-components/icons -- rollup -c=../../rollup.config.js",
        "build:forms": "lerna exec --scope @medly-components/forms -- rollup -c=../../rollup.config.js",
        "build:theme": "lerna exec --scope @medly-components/theme -- rollup -c=../../rollup.config.js",
        "build": "cross-env BABEL_ENV=production lerna exec -- rollup -c=../../rollup.config.js",
        "commit": "git-cz",
        "init:commitizen": "commitizen init cz-lerna-changelog --yarn --dev --exact --force",
        "link:packages": "lerna link && lerna exec -- yarn link",
        "lint:css": "stylelint 'packages/**/src/**/*.tsx'",
        "lint:ts": "eslint 'packages/**/src/**/*.{ts,tsx}'",
        "lint": "run-p -c lint:*",
        "prebuild": "yarn typecheck && rimraf packages/*/dist",
        "prestorybook:build": "yarn test:generate-output",
        "prestorybook:deploy": "yarn test:generate-output",
        "prerelease": "yarn lint && yarn build && yarn test",
        "release": "cross-env HUSKY_BYPASS=true lerna publish",
        "storybook:build": "cross-env BABEL_ENV=storybook build-storybook -c .storybook -o .out",
        "storybook:deploy": "cross-env BABEL_ENV=storybook storybook-to-ghpages",
        "storybook": "start-storybook -p 6006",
        "test:generate-output": "jest --json --outputFile=.jest-test-results.json || true",
        "test:jest": "jest --passWithNoTests --config jest.config.js",
        "test:update": "run-s typecheck \"test:jest -u\"",
        "test:watch": "run-s \"typecheck -- -w\" \"test:jest -- --watch\"",
        "test": "run-s typecheck test:jest",
        "typecheck": "tsc -p tsconfig.json",
        "watch": "lerna exec --no-sort -- rollup -w -c=../../rollup.config.js",
        "watch:core": "lerna exec --scope @medly-components/core -- rollup -w -c=../../rollup.config.js",
        "watch:layout": "lerna exec --scope @medly-components/layout -- rollup -w -c=../../rollup.config.js",
        "watch:utils": "lerna exec --scope @medly-components/utils -- rollup -w -c=../../rollup.config.js",
        "watch:loaders": "lerna exec --scope @medly-components/loaders -- rollup -w -c=../../rollup.config.js",
        "watch:icons": "lerna exec --scope @medly-components/icons -- rollup -w -c=../../rollup.config.js",
        "watch:forms": "lerna exec --scope @medly-components/forms -- rollup -w -c=../../rollup.config.js",
        "watch:theme": "lerna exec --scope @medly-components/theme -- rollup -w -c=../../rollup.config.js"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/medly/medly-components.git"
    },
    "keywords": [],
    "author": "Mukul Bansal",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/medly/medly-components/issues"
    },
    "homepage": "https://github.com/medly/medly-components#readme",
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@babel/plugin-transform-runtime": "^7.9.0",
        "@babel/preset-env": "^7.9.0",
        "@babel/preset-react": "^7.9.1",
        "@babel/preset-typescript": "^7.9.0",
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-lerna-scopes": "^8.3.4",
        "@mdx-js/loader": "1.5.5",
        "@rollup/plugin-babel": "^5.0.0",
        "@rollup/plugin-commonjs": "^11.0.2",
        "@rollup/plugin-node-resolve": "^7.1.1",
        "@rollup/plugin-typescript": "^4.1.1",
        "@storybook/addon-actions": "6.0.26",
        "@storybook/addon-docs": "6.0.26",
        "@storybook/addon-jest": "6.0.26",
        "@storybook/addon-knobs": "6.0.26",
        "@storybook/addon-links": "6.0.26",
        "@storybook/addon-viewport": "^6.0.26",
        "@storybook/addons": "6.0.26",
        "@storybook/addon-essentials": "6.0.26",
        "@storybook/react": "6.0.26",
        "@storybook/storybook-deployer": "^2.8.7",
        "@svgr/rollup": "^5.4.0",
        "@svgr/webpack": "^5.3.0",
        "@testing-library/dom": "^7.5.6",
        "@testing-library/jest-dom": "^5.7.0",
        "@testing-library/react": "^10.0.4",
        "@testing-library/user-event": "^12.0.2",
        "@types/jest": "^25.2.2",
        "@types/react-dom": "^16.9.5",
        "@types/react": "^16.9.25",
        "@types/storybook__addon-info": "5.2.2",
        "@types/styled-components": "^5.1.0",
        "@typescript-eslint/eslint-plugin": "^2.26.0",
        "@typescript-eslint/parser": "^2.26.0",
        "babel-loader": "^8.1.0",
        "babel-plugin-inline-react-svg": "1.1.1",
        "babel-plugin-polished": "^1.1.0",
        "babel-plugin-styled-components": "^1.10.7",
        "commitizen": "4.0.3",
        "cross-env": "7.0.0",
        "cz-lerna-changelog": "^2.0.2",
        "eslint-config-prettier": "^6.10.1",
        "eslint-plugin-jest": "^23.8.2",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react-hooks": "^3.0.0",
        "eslint-plugin-react": "^7.19.0",
        "eslint": "^6.8.0",
        "fork-ts-checker-webpack-plugin": "^4.1.1",
        "husky": "^4.2.3",
        "jest-styled-components": "^7.0.0",
        "jest": "^25.1.0",
        "lerna": "^3.20.2",
        "npm-run-all": "4.1.5",
        "prettier": "^2.0.2",
        "react-docgen-typescript-loader": "3.6.0",
        "react-dom": "^16.13.1",
        "react": "^16.13.1",
        "rimraf": "^3.0.1",
        "rollup-plugin-terser": "^5.3.0",
        "rollup": "^2.10.0",
        "storybook-addon-designs": "^5.4.2",
        "storybook-addon-jsx": "7.3.4",
        "styled-components": "^5.1.0",
        "stylelint-config-prettier": "^8.0.1",
        "stylelint-config-recommended": "^3.0.0",
        "stylelint-config-standard": "^20.0.0",
        "stylelint-config-styled-components": "^0.1.1",
        "stylelint-custom-processor-loader": "^0.6.0",
        "stylelint-prettier": "^1.1.2",
        "stylelint": "^13.4.0",
        "thread-loader": "^2.1.3",
        "ts-node": "^8.8.2",
        "tsconfig-paths-webpack-plugin": "^3.2.0",
        "typescript": "^3.9.2",
        "webpack": "^4.43.0"
    },
    "dependencies": {}
}
