{
    "name": "component-library-ts-boilerplate",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "version": "1.0.0",
    "description": "ðŸš€ Simple themable component library boilerplate using react, styled-compoent & typescript",
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-lerna-changelog"
        }
    },
    "scripts": {
        "prebuild": "yarn type-check",
        "build": "lerna run build",
        "build-storybook": "build-storybook",
        "commit": "git-cz",
        "lint": "run-p -c lint:*",
        "lint:css": "stylelint 'packages/**/src/**/*.tsx'",
        "lint:ts": "tslint -p tsconfig.json",
        "prerelease": "yarn build",
        "release": "lerna publish",
        "storybook": "start-storybook -p 6006",
        "test": "run-s type-check test:jest",
        "test:jest": "jest --passWithNoTests",
        "test:update": "run-s type-check \"test:jest -- -u\"",
        "test:watch": "run-s \"type-check -- -w\" \"test:jest -- --watch\"",
        "type-check": "tsc -p tsconfig.json"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/gmukul01/component-library-ts-boilerplate.git"
    },
    "keywords": [],
    "author": "Mukul Bansal",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/gmukul01/component-library-ts-boilerplate/issues"
    },
    "homepage": "https://github.com/gmukul01/component-library-ts-boilerplate#readme",
    "devDependencies": {
        "@babel/cli": "^7.4.3",
        "@babel/core": "^7.4.3",
        "@babel/plugin-proposal-class-properties": "^7.4.0",
        "@babel/plugin-proposal-object-rest-spread": "^7.4.3",
        "@babel/preset-env": "^7.4.3",
        "@babel/preset-react": "^7.0.0",
        "@babel/preset-typescript": "^7.3.3",
        "@storybook/addon-actions": "^5.1.0-alpha.25",
        "@storybook/addon-info": "^5.0.10",
        "@storybook/addon-knobs": "^5.1.0-alpha.27",
        "@storybook/addon-links": "^5.1.0-alpha.25",
        "@storybook/addons": "^5.1.0-alpha.25",
        "@storybook/react": "^5.1.0-alpha.25",
        "@types/jest": "^24.0.11",
        "@types/react": "^16.8.13",
        "@types/react-dom": "^16.8.3",
        "@types/storybook__addon-actions": "^3.4.2",
        "@types/storybook__addon-info": "^4.1.1",
        "@types/storybook__addon-knobs": "^4.0.5",
        "@types/storybook__addon-links": "^3.3.4",
        "@types/storybook__react": "^4.0.1",
        "@types/styled-components": "^4.1.14",
        "babel-loader": "^8.0.5",
        "babel-plugin-styled-components": "^1.10.0",
        "commitizen": "^3.1.1",
        "cross-env": "^5.2.0",
        "cz-lerna-changelog": "^2.0.2",
        "fork-ts-checker-webpack-plugin": "^1.0.2",
        "jest": "^24.7.1",
        "jest-styled-components": "^6.3.1",
        "lerna": "^3.13.2",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.16.4",
        "react": "^16.8.6",
        "react-docgen-typescript-loader": "^3.1.0",
        "react-dom": "^16.8.6",
        "react-testing-library": "^6.1.2",
        "styled-components": "^4.2.0",
        "stylelint": "^9.10.1",
