{
    "name": "medly-components",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "version": "1.0.0",
    "description": "ðŸš€ Simple themable component library using react, styled-components & typescript",
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-lerna-changelog"
        }
    },
    "scripts": {
        "postinstall": "lerna bootstrap",
        "build": "lerna run build",
        "watch": "lerna run --parallel watch",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "cross-env BABEL_ENV=storybook build-storybook -c .storybook -o .out",
        "deploy-storybook": "cross-env BABEL_ENV=storybook storybook-to-ghpages",
        "commit": "git-cz",
        "create-pack": "lerna exec -- npm pack",
        "link:packages": "lerna link && lerna exec -- yarn link",
        "lint": "run-p -c lint:*",
        "lint:css": "stylelint 'packages/**/src/**/*.tsx'",
        "lint:ts": "tslint -p tsconfig.json",
        "prerelease": "yarn build && lerna version",
        "release": "lerna publish",
        "test": "run-s type-check test:jest",
        "test:jest": "jest --passWithNoTests --config jest.config.js",
        "test:update": "run-s type-check \"test:jest -- -u\"",
        "test:watch": "run-s \"type-check -- -w\" \"test:jest -- --watch\"",
        "type-check": "tsc -p tsconfig.json"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/gmukul01/component-library-ts-boilerplate.git"
    },
    "keywords": [],
    "author": "Mukul Bansal",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/gmukul01/component-library-ts-boilerplate/issues"
    },
    "homepage": "https://github.com/gmukul01/component-library-ts-boilerplate#readme",
    "devDependencies": {
        "@babel/cli": "^7.4.3",
        "@babel/core": "^7.4.3",
        "@babel/plugin-proposal-class-properties": "^7.4.0",
        "@babel/plugin-proposal-object-rest-spread": "^7.4.3",
        "@babel/plugin-transform-runtime": "^7.4.4",
        "@babel/preset-env": "^7.4.3",
        "@babel/preset-react": "^7.0.0",
        "@babel/preset-typescript": "^7.3.3",
        "@mdx-js/loader": "^1.5.1",
        "@storybook/addon-actions": "^5.3.0-rc.6",
        "@storybook/addon-docs": "^5.3.0-rc.6",
        "@storybook/addon-knobs": "^5.3.0-rc.6",
        "@storybook/addon-links": "^5.3.0-rc.6",
        "@storybook/addons": "^5.3.0-rc.6",
        "@storybook/react": "^5.3.0-rc.6",
        "@storybook/storybook-deployer": "^2.8.1",
        "@svgr/webpack": "^5.0.1",
        "@testing-library/dom": "^6.2.0",
        "@testing-library/jest-dom": "^4.1.0",
        "@testing-library/react": "^9.1.4",
        "@types/jest": "^24.0.11",
        "@types/react": "^16.8.13",
        "@types/react-dom": "^16.8.3",
        "@types/storybook__addon-info": "^5.2.1",
        "@types/styled-components": "^4.1.14",
        "babel-loader": "^8.0.5",
        "babel-plugin-inline-react-svg": "^1.1.0",
        "babel-plugin-styled-components": "^1.10.0",
        "commitizen": "^4.0.3",
        "cross-env": "^6.0.3",
        "cz-lerna-changelog": "^2.0.2",
        "fork-ts-checker-webpack-plugin": "^3.1.1",
        "jest": "^24.5.0",
        "jest-styled-components": "^6.3.1",
        "lerna": "^3.13.2",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.16.4",
        "react": "^16.8.6",
        "react-docgen-typescript-loader": "^3.1.0",
        "react-dom": "^16.8.6",
        "rimraf": "^3.0.0",
        "storybook-addon-jsx": "^7.1.2",
        "styled-components": "^4.2.0",
        "stylelint": "^10.1.0",
        "stylelint-config-recommended": "^2.1.0",
        "stylelint-config-styled-components": "^0.1.1",
        "stylelint-custom-processor-loader": "^0.6.0",
        "stylelint-processor-styled-components": "^1.6.0",
        "tsconfig-paths-webpack-plugin": "^3.2.0",
        "tslint": "^5.15.0",
        "tslint-config-airbnb": "^5.11.1",
        "tslint-config-prettier": "^1.18.0",
        "tslint-plugin-prettier": "^2.0.1",
        "tslint-react": "^4.0.0",
        "tslint-react-hooks": "^2.0.0",
        "typescript": "^3.4.3",
        "webpack": "^4.29.6"
    },
    "dependencies": {}
}
